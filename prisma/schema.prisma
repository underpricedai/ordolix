model FieldConfigurationScheme {
  id             String   @id @default(cuid())
  organizationId String
  name           String
  description    String?
  isDefault      Boolean  @default(false)
  parentId       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization                @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  parent       FieldConfigurationScheme?    @relation("FieldConfigSchemeInheritance", fields: [parentId], references: [id], onDelete: SetNull)
  children     FieldConfigurationScheme[]   @relation("FieldConfigSchemeInheritance")
  entries      FieldConfigurationEntry[]
  projects     Project[]

  @@unique([organizationId, name])
}

model FieldConfigurationEntry {
  id                         String  @id @default(cuid())
  fieldConfigurationSchemeId String
  customFieldId              String
  isVisible                  Boolean @default(true)
  isRequired                 Boolean @default(false)
  position                   Int     @default(0)

  scheme      FieldConfigurationScheme @relation(fields: [fieldConfigurationSchemeId], references: [id], onDelete: Cascade)
  customField CustomField              @relation(fields: [customFieldId], references: [id], onDelete: Cascade)

  @@unique([fieldConfigurationSchemeId, customFieldId])
  @@index([fieldConfigurationSchemeId])
}

model NotificationScheme {
  id             String   @id @default(cuid())
  organizationId String
  name           String
  description    String?
  isDefault      Boolean  @default(false)
  parentId       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization            @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  parent       NotificationScheme?      @relation("NotificationSchemeInheritance", fields: [parentId], references: [id], onDelete: SetNull)
  children     NotificationScheme[]     @relation("NotificationSchemeInheritance")
  entries      NotificationSchemeEntry[]
  projects     Project[]

  @@unique([organizationId, name])
}

model NotificationSchemeEntry {
  id                   String  @id @default(cuid())
  notificationSchemeId String
  event                String
  recipientType        String
  recipientId          String?
  channels             Json    @default("[\"in_app\", \"email\"]")

  scheme NotificationScheme @relation(fields: [notificationSchemeId], references: [id], onDelete: Cascade)

  @@unique([notificationSchemeId, event, recipientType, recipientId])
  @@index([notificationSchemeId])
}

model ComponentScheme {
  id             String   @id @default(cuid())
  organizationId String
  name           String
  description    String?
  isDefault      Boolean  @default(false)
  parentId       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization          @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  parent       ComponentScheme?       @relation("ComponentSchemeInheritance", fields: [parentId], references: [id], onDelete: SetNull)
  children     ComponentScheme[]      @relation("ComponentSchemeInheritance")
  entries      ComponentSchemeEntry[]
  projects     Project[]

  @@unique([organizationId, name])
}

model ComponentSchemeEntry {
  id                String  @id @default(cuid())
  componentSchemeId String
  componentId       String
  isDefault         Boolean @default(false)
  position          Int     @default(0)

  scheme    ComponentScheme @relation(fields: [componentSchemeId], references: [id], onDelete: Cascade)
  component Component       @relation(fields: [componentId], references: [id], onDelete: Cascade)

  @@unique([componentSchemeId, componentId])
  @@index([componentSchemeId])
}

// ============================================================================
// Section 6: Plans / Advanced Roadmaps
// ============================================================================

model Plan {
  id             String   @id @default(cuid())
  organizationId String
  name           String
  description    String?  @db.Text
  ownerId        String
  isShared       Boolean  @default(false)
  status         String   @default("active")
